extends layout

block content
    #universe

        #galaxy.galaxy-view--3D
            each item in items
                .orbit(id="#{item.name}")
                    .planet-wrap
                        .planet(style="background-image: url('../img/planets/#{item.name}.jpg')")
                            if item.rings
                                .rings
                            .tooltip.planet-tooltip #{item.name}
                            if item.name === 'earth'
                                #moon.orbit
                                    .planet-wrap
                                        .planet
            .orbit(id="asteroids")
                //- var i = 0
                //while (i < 100)
                //    .planet-wrap(style="left: " + (i++)*Math.floor(Math.random() * 10) + "%; top: " + (i++)*Math.floor(Math.random() * 10) + "%;")
                //        .planet(style="left: " + (i++)*Math.floor(Math.random() * 10) + "%; top: " + (i++)*Math.floor(Math.random() * 10) + "%;")

        include menu

    script.
        socket.on('urlcontrol', function (data) {
            window.location.href = data.url
        })

        socket.on('key', function (data) {
            $('.loader__remote-button').val(data.code);
        });

        socket.on('openDesktopApp', function (data) {
            $(data.loader).click();
        });