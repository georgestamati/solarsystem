extends layout

block content
	#universe
		#galaxy
			.wrapper
				.planet-wrapper(id="#{title}")
					.planet(style="background-image: url('../img/planets/#{title}_hd.jpg')")
						if title === 'saturn' || title === 'uranus'
							.rings
					.moons-wrapper
						each item in items
							if item.name === title && item.moons
								each moon in item.moons
									- var isTrue = "background-image: url('../img/planets/" + moon.name + ".jpg')"
									- var isFalse = "background-image: url('../img/moons/" + item.name + "/" + moon.name + ".jpg')"
									a.moon(
										class="#{moon.name}",
										href="/#{moon.name}",
										style= item.name === 'sun' ? isTrue : isFalse)
										.tooltip.moon-tooltip #{moon.name}

				.info-wrapper
					.info-gallery

		include menu

	script.
		socket.on('urlcontrol', function (data) {
			window.location.href = data.url;
		});