extends layout

block content

	#galaxy
		.wrapper
			.planet-wrapper(id="#{title}")
				.planet
					if title == 'saturn' || title == 'uranus'
						.rings
				.moons-wrapper
					each item in items
						if item.name == title
							each moon in item.moons
								.moon(id="#{moon.name}", style="background-image: url('../img/moons/#{item.name}/#{moon.name}.jpg')")
			.info-wrapper

	ul.menu
		each item in items
			li
				a(href="/#{item.name}") #{item.name}


	script.
		var socket = io.connect();
		socket.on('urlcontrol', function (data) {
			window.location.href = data.url;
		});